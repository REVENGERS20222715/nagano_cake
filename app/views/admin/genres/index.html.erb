<table class='table table-hover table-inverse'>
  <thead>
    <%= form_with model:genre,local:true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control book_title' %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    <% end %>

  </thead>
  <tbody>
    <% @genress.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>
          <%= link_to 'Edit', edit_admin_genre_path(@genre), class: "btn btn-sm btn-success" %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>