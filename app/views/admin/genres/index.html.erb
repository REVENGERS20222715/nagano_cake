
<div class="container">
  <h5>ジャンル一覧・追加</h5>
      <table class='table table-bordered'>
        <thead>
          <%= form_with model: @genre, url: admin_genres_path do |f| %>
            <div class="form-group">
              <%= f.label :"ジャンル名　" %>
              <%= f.text_field :name %>
            </div>
            <div class="form-group">
              <%= f.submit class: 'btn btn-success' %>
            </div>
          <% end %>

        </thead>
      </table>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th></th>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td></td>
              <td><%= genre.name %></td>
              <td>
                <%= link_to '編集', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col">
    </div>
    <div class="col">
    </div>
  </div>
</div>