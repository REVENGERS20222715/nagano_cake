<div class="container">
  <div class="row">
<h1>Admin::Orders#show[注文履歴詳細]</h1>


<table class="table table-bordered">
		<tr>
			<th>購入者</th>
			<td><%= link_to  admins_customer_path(@order) do %>
					<%= @order.customer.last_name %><%= @order.customer.first_name %>
					<% end %>
			</td>
		</tr>
		<tr>
			<th>注文日</th>
			<td>
		    <%= @order.created_at %>
			</td>
		</tr>
		<tr>
			<th>配送先</th>
			<td><%= @order.address %></td>
		</tr>
		<tr>
			<th>支払方法</th>
				<td><%= @order.orders.payment_method %></td>
		</tr>
			<tr>
			<th>注文ステータス</th
    		<%= form_with model:@order, url: admin_order_path, local: true do |f| %>
              <%= f.select :status, ["入金待ち", "入金確認","製作中","発送準備中","発送済み"] %>
              <%= f.submit "更新", class: 'btn btn-primary' %>
            <% end %>
			<td><%= @order.payment_method %></td>
		</tr>
	</table>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
  </thead>
  <% @order_details.each do |order_detail| %>
</table>
<tbody>

  <tr>
    <td><%= order_detail.items.name %></td>

   <td><%= (order_detail.price*1.1).floor.to_s(:delimited) %></td>

   <td><%= order_detail.quantity %></td>

   <td><%= ((order_detail.price * order_detail.amount*1.1).floor).to_s(:delimited) %></td>
     <% end %>

    <%= form_with model:order_detail, url: admin_order_detail_path(order_detail), local: true do |f| %>
              <%= f.select :make_status, ["製作不可", "製作待ち", "製作中", "製作完了"] %>
              <%= f.submit "更新", class: 'btn btn-primary' %>
    <% end %>
 </tr>
 
 <p>商品合計<%= (@order.total_fee - @order.shipping).to_s(:delimited)%>円</p>
 <p>送料<%= @order.shipping %>円</p>
 <p>請求金額合計<%= @order.total_fee.to_s(:delimited) %>円</p>

  </tbody>

</div>
</div>
