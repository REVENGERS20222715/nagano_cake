<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <p id="notice"></p>
      <h2>会員一覧</h2>

      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
          <!--each文→複数のものを取り出す。doで右側に一番を格納する。||=customer.find1番-->
            <tr>
              <th><%= customer.id %></th>
              <!--画像と文字link to do -->
              <th><%= link_to admin_customer_path(customer) do %><%= customer.first_name %> <%= customer.last_name %><% end %></th>
              <!--ブロック変数は@がいらない-->
              <th><%= customer.email %></th>
              <th>
                  <% if customer.is_deleted? == true %>
    	           <th class="text-danger text-center">退会</th>
		          <% else %>
			       <th class="text-success text-center">有効</th>
		          <% end %>
              </th>
            </tr>
            <% end %>
            <!--each~endまで来たら繰り返し。２番以降からデータがなくなるまで繰り返す。-->
            <%= paginate @customers %>
        </tbody>
      </table>
    </div>
  </div>
</div>