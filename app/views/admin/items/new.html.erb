<h3 class='mt-3'>商品編集</h3>  
    <div class='container'>
        <div class='row'>
            <div class='colspan-md-3'>
                <%= form_with model :@item do |f| %>
                    <div class='form-group'></div>
                        <label for='inputimage'>商品画像</label>
                        <%= image_tag @item.image, size: '60x60' if @item.image.attached? %>
                        <%= f.file_field :image %>
                        </div>
                    <div class='form-group'>
                        <label for='itemname'>商品名</label>
                        <%= f.text_field :name,rows:'5', id:'item[name]', placeholder: "商品名", class='form-control' %>
                    </div>
                    <div class='form-group'>
                        <label for='introduction'></label>
                        <%= f.text_area :introduction,rows:'5', id:'item[introdution]', placeholder: "ここに説明文を記述します", class='form-control' %>
                    </div>
                    <div class='form-group'>
                        <h3>ジャンル</h3>
                    </div>
                    <div class='form-group'>
                        <h3>販売ステータス</h3>
                    </div>
            </div>
        </div>
    </div>
            