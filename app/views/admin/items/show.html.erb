<div class='container'>
    <div class='row'>
        <p id="notice"></p>
        <div class="col-xl-4">
            <h2>商品詳細</h2>
            <%= image_tag @item.image, size: '300x200' if @item.image.attached? %>
        </div>
            <div class="col-xl-8">
                <h3>商品名</h3><%= @item.name %>
                <h3>商品説明</h3><%= @item.introduction %>
                <h3>ジャンル</h3><%= @item.genre.name %>
                <h3>税込価格(税抜価格)</h3><%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= @item.price %>)<h4>円</h4>
                <h3>販売ステータス</h3>
                <% if @item.is_active? == false %>
                    <td class="text-danger">販売停止中</td>
                <% else %>
                    <td class="text-success">販売中</td>
                <% end %>    
            </div>

            <%= link_to 'edit', edit_admin_item_path(@item.id), class: "btn btn-sm btn-success edit_item_#{@item.id}" %>
        </div>
    </div>
</div>