<div class='container'>
    <div class='row'>
        <div class='col-md-3'>
            <h2>商品詳細</h2>
            <div>
                <%= image_tag @item.imgae, size: '60x60' if @item.image.attached? %>
                <%= @item.name %>
                <%= @item.introduction %>
                <%= @item.genre.name %>
                <%= @item.price %>
                <%= @item.is_active %>
            </div>
            <%= link_to 'edit', edit_admin_item_path(@item.id), class: "btn btn-sm btn-success edit_item_#{@item.id}" %>
        </div>
    </div>
</div>