<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <h6>名前             
    <%= f.label :"(姓)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "姓" %>
    <%= f.label :"(名)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "名" %><br />
    </h6>
  </div>
  
  <!--<div class="field">-->
  <!--  <%#= f.label :last_name %><br />-->
  <!--  <%#= f.email_field :last_name, autofocus: true, autocomplete: "名" %>-->
  <!--</div>-->
  
  <div class="field">
    <h6>フリガナ           
    <%= f.label :"(セイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "セイ" %>
    <%= f.label :"(メイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "メイ" %><br />
    </h6>
  </div>
  
  <!--<div class="field">-->
  <!--  <%#= f.label :last_name_kana %><br />-->
  <!--  <%#= f.email_field :last_name_kana, autofocus: true, autocomplete: "メイ" %>-->
  <!--</div>-->
  
  <div class="field">
    <h6>メールアドレス         
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </h6>
  </div>
  
  <div class="field">
    <h6>郵便番号(ハイフンなし)   
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号" %>
    </h6>
  </div>
  
  <div class="field">
    <h6>住所                 
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
    </h6>
  </div>
  
  
  <div class="field">
    <h6>電話番号(ハイフンなし)        
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "電話番号" %>
    </h6>
  </div>
  

  <div class="field">
    <h6>パスワード(6文字以上)         
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    </h6>
  </div>

  <div class="field">
    <h6>パスワード(確認用)         
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </h6>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
