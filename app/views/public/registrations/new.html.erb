<div class="container">
  <div class="row">
    <div class="col m-10">
      <p id="notice"></p>
      <h2>新規会員登録</h2>
      <p id="notice"></p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <table class="row table">
          <tr>
            <th>
              <h5>名前</h5>
            </th>

            <th><%= f.label :"(姓)" %></th>
            <th><%= f.text_field :first_name, autofocus: true, autocomplete: "姓" %></th>

            <th><%= f.label :"(名)" %></th>
            <th><%= f.text_field :last_name, autofocus: true, autocomplete: "名" %></th>
          </tr>

        <!--<div class="field">-->
        <!--  <%#= f.label :last_name %><br />-->
        <!--  <%#= f.email_field :last_name, autofocus: true, autocomplete: "名" %>-->
        <!--</div>-->

          <tr>
            <th>
              <h5>フリガナ</h5>
            </th>

            <th><%= f.label :"(セイ)" %></th>
            <th><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "セイ" %></th>


            <th><%= f.label :"(メイ)" %></th>
            <th><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "メイ" %></th>

          </tr>

        <!--<div class="field">-->
        <!--  <%#= f.label :last_name_kana %><br />-->
        <!--  <%#= f.email_field :last_name_kana, autofocus: true, autocomplete: "メイ" %>-->
        <!--</div>-->

          <tr>
            <th>
              <h5>メールアドレス</h5>
            </th>
            <th></th>
            <th>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </th>
            <th></th>
            <th></th>
          </tr>

          <tr>
            <th>
              <h5>郵便番号(ハイフンなし)</h5>
            </th>
            <th></th>
            <th>
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号" %>
            </th>
            <th></th>
            <th></th>
          </tr>

          <tr>
            <th>
              <h5>住所</h5>
            </th>
            <th></th>
            <th>
              <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
            </th>
            <th></th>
            <th></th>
          </tr>


          <tr>
            <th>
              <h5>電話番号(ハイフンなし)</h5>
            </th>
            <th></th>
            <th>
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "電話番号" %>
            </th>
            <th></th>
            <th></th>
          </tr>


          <tr>
          <th>
            <h5>パスワード(6文字以上)</h5>
          </th>
          <th></th>
          <th>
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </th>
          <th></th>
          <th></th>
          </tr>

          <tr>
          <th>
            <h5>パスワード(確認用)</h5>
          </th>
          <th></th>
          <th>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </th>
          <th></th>
          <th></th>
          </tr>


          <tr>
            <th>
              <div class="actions">
                <%= f.submit "登録" %>
              </div>
            </th>
            <th></th><th></th><th></th><th></th>
          </tr>
        </table>



            <h2>既に登録済みの方</h2>
            <h5><%= render "public/shared/links" %>からログインしてください</h5>
      <% end %>
    </div>
  </div>
</div>
