<div class="row">
  <div class="col-xs-3">
    <%#= render 'genres/sidebar', genres: @genres %>
  </div>

  <div class="col-xs-9">
    <div class="item-info row">
      <div class="col-xs-6">
        <div class="item-info-image">
            <% if @item.image.attached? %>
              <%= image_tag @item.image, size: "300x300" %>
            <% else %>
              <%= image_tag 'no_image', size: "300x300" %>
            <% end %>
                  
      <div class="col-xs-6">
        <h3 class="item-info-name">
          <%= @item.name %>
        </h3>
        <div class="item-info-introduction">
          <p><%= @item.introduction %></p>
        </div>
        <div class="item-info-price">
          <h4>¥<%= ((@item.price * 1.1).to_s(:delimited)) %><span> (税込) </span></h4>
        </div>
      </div>
    </div>
    <div class="item-count-form text-right">
      <%= form_with model: @cart_item, url: public_cart_items_path do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <span id="item-count">個数</span>
        <%= f.select :quantity, (1..50), class: "item-count-select" %>
        <%= f.submit "カートに入れる", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

</div>